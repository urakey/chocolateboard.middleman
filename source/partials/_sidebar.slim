.sidebar

  nav
    h2.sidebar__title
      | Tags
    ul.sidebar__list--tags
      - blog.tags.each do |t, articles|
        li
          == link_to t, tag_path(t), :rel => 'tag'

  nav
    h2.sidebar__title
      | Categories
    ul.sidebar__list
      - blog.articles.group_by {|a| a.data.category }.each do |c, articles|
        li
          == link_to c, category_path(c), :rel => 'tag category'
          |  (
          == articles.size
          | )

  nav
    h2.sidebar__title
      | Archives
    ul.sidebar__list
      - blog.articles.group_by {|a| a.date.year }.each do |year, articles_year|
        li
          a[href="#{blog_year_path(year)}"]
            | #{year}

  aside
    h2.sidebar__title
      | Blog
    ul#HatenaEntries.sidebar__list
  
    h2.sidebar__title
      | Flickr
    ul#FlickrPhotos.sidebar__list--photos
